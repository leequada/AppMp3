<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <LinearLayout
        android:background="#555555"
        android:orientation="vertical"
        android:id="@+id/LinerlayoutAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ImgviewAlbum"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_width="250dp"
            android:layout_height="200dp"></ImageView>
        <TextView
            android:id="@+id/TextNameAlbuum"
            android:textColor="#ffff"
            android:textSize="18dp"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="Night Visions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/NameSingerAlbum"
            android:textColor="#ffff"
            android:textStyle="italic"
            android:layout_marginLeft="13dp"
            android:text="Imagine Dragon"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>