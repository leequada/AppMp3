<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222222">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txtViewPlaynhac"
            android:textColor="#fff"
            android:textSize="18dp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/TextViewNameSong_Playnhac"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txtViewPlaynhac"
            android:text="Let me love you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtNameSinger_Playnhac"
            android:textColor="#fff"
            android:text="Justin Bieber"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/TextViewNameSong_Playnhac"
            android:layout_toRightOf="@id/txtViewPlaynhac"
            android:textStyle="italic"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtTotalTime_Playnhac"
            android:text="00:00"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>