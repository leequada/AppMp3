<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custome_background_banner"
    android:layout_marginTop="5dp">
    <ImageView
        android:background="@drawable/custome_background_banner"
        android:id="@+id/ImageMostlike"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"></ImageView>
    <TextView
        android:textColor="#fff"
        android:id="@+id/TextViewNameSong"
        android:text="Naruto OST III"
        android:layout_marginTop="55dp"
        android:textSize="17dp"
        android:ellipsize="end"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/ImageMostlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:textColor="#fff"
        android:id="@+id/TextNameSinger"
        android:textStyle="italic"
        android:textSize="15dp"
        android:text="Yasuharu Takanashi"
        android:layout_toRightOf="@id/ImageMostlike"
        android:layout_marginLeft="7dp"
        android:layout_below="@id/TextViewNameSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/luotthich"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_love_white"
        android:layout_width="24dp"
        android:layout_height="24dp">

    </ImageView>

</RelativeLayout>